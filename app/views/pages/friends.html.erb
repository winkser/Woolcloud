<%= render 'pages/header' %>
<h2 id="current_page">Friends</h2>

<div class="container" style="background:#a6a6a6;">
<h3>Your friends:</h3>
<% @friends.each do |fr| %>
<%= link_to "delete", pages_friends_drop_path(fr.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= fr.inspect %><br>
<% end %>
</div>

<div class="container" style="background:#a6a6a6;">
<h3>Add friends:</h3>
<%= form_for :friend do |f| %>
<%= f.label "Type email:" %>
<%= f.text_field :email %>
<%= f.submit "Add" %>
<% end %>
<%= @error %>
</div>

<div class="container" style="background:#a6a6a6;">
<h3>All users:</h3>
<% @users.each do |f| %>
<%= f.inspect %><br>
<% end %>
</div>
